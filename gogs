function list-issue-comments {
	syntax-help 3 "user/org-name repo-name issue-number" "$@"

	check-user-org-exists-not $1; return-exit-code-if-error
	check-repo-exists-not $1 $2; return-exit-code-if-error

	response=`gogs-curl GET /repos/$1/$2/issues/$3/comments`

	if is-debug; then
		echo "$response"
	else
		echo "$response" | split-json "}," "{" | per-line "json-properties user body"
	fi
}

