	request=""
	case $4 in
		title) request="\"title\":\"$5\"" ;;
		state) request="\"state\":\"$5\"" ;;
		body) request="\"body\":\"$5\"" ;;
		*) echo-error Invalid field: $4. Use title, state, or body; return 1 ;;
	esac

	output=`gogs-curl PATCH /repos/$1/$2/pulls/$3 "{$request}"`

	echo-and-exit-code--error-if-message "$output"
}

