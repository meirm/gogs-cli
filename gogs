actions=$actions" create-pull-request"
function create-pull-request {
	syntax-help 5 "user/org-name repo-name title head-branch base-branch [description]" "$@"

	check-user-org-exists-not $1; return-exit-code-if-error
	check-repo-exists-not $1 $2; return-exit-code-if-error

	# Build the request data
	request="\"title\":\"$3\",\"head\":\"$4\",\"base\":\"$5\""
	if [ -n "$6" ]; then
		request="$request,\"body\":\"$6\""
	fi

	output=`gogs-curl POST /repos/$1/$2/pulls "{$request}"`

	echo-and-exit-code--error-if-message "$output"
}

