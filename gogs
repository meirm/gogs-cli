	check-user-org-exists-not $1; return-exit-code-if-error
	check-repo-exists-not $1 $2; return-exit-code-if-error

	response=`gogs-curl GET /repos/$1/$2/pulls/$3`

	if [ -z "$response" ]; then
		echo-error Pull request \#$3 does NOT exist
		return 1
	elif [ -z $4 ] || is-debug; then
		output="$response"
	else
		output=`echo "$response" | json-property "$4"`
	fi

	echo-and-exit-code--error-if-empty "$output"
}

